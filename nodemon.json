{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".jspm",
    ".config",
    ".*ignore",
    ".bash_history",
    "npm-shrinkwrap.json",
    "*.sh",
    "node_modules/**/node_modules",
    "app/node_modules/**/node_modules",
    "app/jspm_packages/github/**",
    "app/jspm_packages/npm/**",
    "bin",
    "conf",
    "*.md",
    "LICENSE",
    "*.yml",
    "Dockerfile",
    "nodemon.json"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "Restarting in a blink"
  },
  "watch": [
    "app/",
    "certs/",
    "index.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json html"
}