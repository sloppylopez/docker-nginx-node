{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".jspm",
    ".config",
    ".*ignore",
    ".bash_history",
    "npm-shrinkwrap.json",
    "yarn.lock",
    "*.sh",
    "node_modules",
    "app/node_modules/**/node_modules",
    "app/jspm_packages/**/*",
    "bin",
    "conf",
    "*.md",
    "LICENSE",
    "*.yml",
    "Dockerfile",
    "app/config.js"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "app/components",
    "app/stylesheets",
    "app/app.js",
    "certs/",
    "server.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "npm run cacheclear:jspm"
  },
  "ext": "js json html"
}